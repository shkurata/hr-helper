{
  "name": "hr-helper",
  "version": "1.0.0",
  "description": "A CLI tool to help HR with the payment dates",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest",
    "lint": "npx eslint src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src/**/* --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky"
  },
  "keywords": [
    "[\"payment\"",
    "\"bonus\"]"
  ],
  "bin": {
    "hr-helper": "./bin/index.js"
  },
  "type": "module",
  "author": "Nikolay Neykov",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "3.2.5"
  }
}
